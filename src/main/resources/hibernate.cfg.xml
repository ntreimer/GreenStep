<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 5.3//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-5.3.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="connection.url">jdbc:mariadb://localhost:3306/greenstep</property>
        <property name="connection.username">root</property>
        <property name="connection.password">password</property>

        <property name="dialect">org.hibernate.dialect.MariaDB103Dialect</property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!--Mapping entity file-->
        <mapping class="com.natetreimer.greenstep.models.Footprint"/>
        <mapping class="com.natetreimer.greenstep.models.Checklist"/>
        <mapping class="com.natetreimer.greenstep.models.Journal"/>
        <mapping class="com.natetreimer.greenstep.security.User"/>
        <mapping class="com.natetreimer.greenstep.security.Role"/>

    </session-factory>
</hibernate-configuration>  

